pipeline {
    agent any

    environment {
        PHP_PATH = 'C:\\xampp\\php'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'üì¶ Cloning repository...'
                git 'https://github.com/BebintoThomas/Car-Rental.git'
            }
        }

        stage('PHP Lint Check') {
            steps {
                echo 'üîç Running PHP lint check...'
                bat "${env.PHP_PATH}\\php.exe -l index.php"
            }
        }

        stage('Deploy to XAMPP') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                echo 'üöÄ Deploying to XAMPP htdocs...'
                bat 'xcopy * C:\\xampp\\htdocs\\CarR /E /Y /I'
            }
        }

        stage('Open in Browser') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                echo 'üåê Opening site in browser...'
                bat 'start http://localhost/CarR/index.php'
            }
        }
    }

    post {
        failure {
            echo '‚ùå Build failed!'
        }
        success {
            echo '‚úÖ Build and deployment successful!'
        }
    }
}
