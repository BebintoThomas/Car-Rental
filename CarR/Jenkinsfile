pipeline {
    agent any

    environment {
        XAMPP_PATH = "C:\\xampp"
        DEPLOY_PATH = "${XAMPP_PATH}\\htdocs\\CarR"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'üì¶ Cloning repository...'
                git branch: 'main', url: 'https://github.com/BebintoThomas/Car-Rental.git'
            }
        }

        stage('PHP Lint Check') {
            steps {
                echo 'üîç Running PHP lint check...'
                bat '''
                for /R %%f in (*.php) do (
                    echo Checking %%f...
                    php -l "%%f" || exit /b 1
                )
                '''
            }
        }

        stage('Deploy to XAMPP') {
            steps {
                echo 'üöö Deploying to XAMPP htdocs...'
                bat '''
                if exist "%DEPLOY_PATH%" rmdir /s /q "%DEPLOY_PATH%"
                mkdir "%DEPLOY_PATH%"
                xcopy /E /I /Y "CarR\\*" "%DEPLOY_PATH%"
                '''
            }
        }

        stage('Open in Browser') {
            steps {
                echo 'üåê Opening project in browser...'
                bat 'start "" "http://localhost/CarR/index.php"'
            }
        }
    }

    post {
        failure {
            echo '‚ùå Build failed!'
        }
        success {
            echo '‚úÖ Build completed successfully!'
        }
    }
}
