pipeline {
    agent { label 'BebintoThomas' }

    environment {
        PHP_PATH = 'C:\\path\\to\\php' // Change this to your actual PHP path
    }

    stages {
        stage('PHP Lint Check') {
            steps {
                echo 'üîç Running PHP lint check...'
                bat "${env.PHP_PATH}\\php.exe -l index.php"
            }
        }

        stage('Deploy to XAMPP') {
            steps {
                echo 'üöÄ Deploying to XAMPP...'
                bat '''
                xcopy /Y /E "%WORKSPACE%\\*" "C:\\xampp\\htdocs\\CarR\\"
                '''
            }
        }

        stage('Open in Browser') {
            steps {
                echo 'üåê Opening browser...'
                bat 'start http://localhost/CarR'
            }
        }
    }

    post {
        failure {
            echo '‚ùå Build failed!'
        }
        success {
            echo '‚úÖ Build succeeded!'
        }
    }
}
