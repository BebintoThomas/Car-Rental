pipeline {
    agent { label 'BebintoThomas' }

    environment {
        PHP_PATH = 'C:\\path\\to\\php' // Update this to the correct PHP path if different
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Cloning repository...'
                git 'https://github.com/BebintoThomas/Car-Rental.git'
            }
        }

        stage('PHP Lint Check') {
            steps {
                echo 'ğŸ” Running PHP lint check...'
                bat "${env.PHP_PATH}\\php.exe -l index.php"
            }
        }

        stage('Deploy to XAMPP') {
            steps {
                echo 'ğŸš€ Deploying to XAMPP...'
                bat '''
                xcopy /Y /E "%WORKSPACE%\\*" "C:\\xampp\\htdocs\\CarR\\"
                '''
            }
        }

        stage('Open in Browser') {
            steps {
                echo 'ğŸŒ Opening browser...'
                bat 'start http://localhost/CarR'
            }
        }
    }

    post {
        failure {
            echo 'âŒ Build failed!'
        }
        success {
            echo 'âœ… Build succeeded!'
        }
    }
}
