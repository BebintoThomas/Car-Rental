pipeline {
    agent any

    environment {
        DEPLOY_DIR = 'C:/xampp/htdocs/CarR'  // Change this if your path is different
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo '📦 Cloning repository...'
                git branch: 'main', url: 'https://github.com/BebintoThomas/Car-Rental.git'
            }
        }

        stage('PHP Lint Check') {
            steps {
                echo '🔍 Running PHP lint check...'
                bat 'php -l index.php'  // Basic syntax check for index.php
            }
        }

        stage('Deploy to XAMPP') {
            steps {
                echo '🚀 Deploying project to XAMPP htdocs...'
                bat """
                xcopy /E /Y /I . "%DEPLOY_DIR%"
                """
            }
        }

        stage('Open in Browser') {
            steps {
                echo '🌐 Opening site in browser...'
                bat 'start http://localhost/CarR/index.php'
            }
        }
    }

    post {
        failure {
            echo '❌ Build failed!'
        }
        success {
            echo '✅ Build completed successfully!'
        }
    }
}
